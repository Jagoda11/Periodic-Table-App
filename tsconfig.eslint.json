{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    ".eslintrc.cjs",
    "jest.config.ts",
    "jest.setup.ts",
    "playwright-tests/**/*.ts",
    "playwright.config.ts",
    "vite.config.ts",
    "env.d.ts",
    "shims-vue.d.ts",
    "src/**/*.spec.ts",
    "tests/**/*.ts"
    // Add any other files outside "src" that you want ESLint to cover
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "playwright-tests/**/*.js",
    "playwright-tests/**/*.map",
    "playwright-tests/**/*.html",
    "playwright-report/extractFailedTests.ts",
    "playwright-report/index.html"
    // exclude any directory you do not want TypeScript to process for linting
  ]
}
