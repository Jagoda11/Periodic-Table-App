{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    ".eslintrc.cjs",
    "jest.config.cjs",
    "playwright-tests/**/*.ts",
    "playwright.config.ts",
    "vite.config.ts",
    "env.d.ts",
    "shims-vue.d.ts"
    // Add any other files outside "src" that you want ESLint to cover
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
    // exclude any directory you do not want TypeScript to process for linting
  ]
}
