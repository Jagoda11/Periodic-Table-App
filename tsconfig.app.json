{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*",
    "tests/**/*",
    "playwright-tests/**/*",
    "vite.config.ts",
    "jest.config.cjs",
    "nightwatch.conf.js",
    "playwright-tests/playwright.config.ts",
    "playwright.config.ts",
    "env.d.ts",
    "src/shims-vue.d.ts",
    "src/typings",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.vue",
    "src/**/*.svg",
    "src/**/*.png",
    "src/**/*.jpg",
    "src/**/*.jpeg",
    "src/**/*.gif",
    "src/**/*.css",
    "src/**/*.html",
    "src/**/*.md",
    "src/**/*.json",
    "src/**/*.d.ts",
    "src/**/*.yaml",
    "src/**/*.yml",
    "src/**/*.csv",
    "src/**/*.tsbuildinfo",
    "src/**/*.map",
    "src/types/ElementData.ts",
    "src/components/PeriodicTable.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.js",
    "tests/**/*.vue",
    "playwright-tests/**/*.ts",
    "playwright.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "jest.config.cjs",
    "nightwatch.conf.js",
    "playwright-tests/playwright.config.ts"
  ],
  "exclude": ["node_modules", "dist", "public", "cypress"],
  "compilerOptions": {
    "esModuleInterop": true,
    "composite": true,
    "noEmit": false, // Set this to true to prevent TypeScript from emitting JavaScript files
    "outDir": "./dist", // Specify the directory where JavaScript files will be outputted
    "tsBuildInfoFile": "./tmp/tsconfig.app.tsbuildinfo", 
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["jest"]
  }
}
